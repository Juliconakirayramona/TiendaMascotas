@page
@model asp_presentacion.Pages.Ventanas.Menu.MenuModel
@{
    ViewData["Titulo"] = "Facturas";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Clientes</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Filtrar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.ID_Persona" />
            }
            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.ID_Factura " />
                <input type="hidden"
                       asp-for="@Model.Actual!.Codigo_Factura" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Cliente" />
                       <input type="hidden"
                       asp-for="@Model.Actual!.Mascota" />
                       <input type="hidden"
                       asp-for="@Model.Actual!.Servicio" />
                       <input type="hidden"
                       asp-for="@Model.Actual!.Pago" />

            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>EDITAR CLIENTE</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                ID_Factura
                            </label>
                            <div class="col-lg-6">
                                <input id="nmID_Factura"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.ID_Factura" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Codigo_Factura
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCodigo_Factura"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Codigo_Factura" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                TOTAL
                            </label>
                            <div class="col-lg-6">
                                <input id="nmTOTAL"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.TOTAL" />
                            </div>

                            <div class="form-group">
                            <label class="col-lg-4 control-label">
                                CLiente
                            </label>
                             <div class="col-lg-6">
                                <input id="nmcliente"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Cliente" />
                            </div>

                          <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Mascota
                            </label>
                            <div class="col-lg-6">
                                <input id="nmMascota"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Mascota" />
                            </div>
                                    
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync(
                         "../../Emergentes/Mensajes.cshtml")
                ;
            }
            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Nuevo )
            {
                <div class="containers_vn panel panel-default">
                    <h3>INGRESA Mascota</h3>

                    <div>
                        
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Codigo_Factura
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCodigo_Factura"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Codigo_Factura" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Cliente
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCliente"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Cliente" />
                            </div>
                        </div>
                    </div>
                </div>
            }


            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Codigo_Factura
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input id="flCodigo_Factura"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Codigo_Factura"
                       placeholder="Codigo_Factura" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Codigo_Factura
                            </th>
                            <th class="cl_hidden">
                                Id_Persona
                            </th>
                            <th class="cl_hidden">
                                Cliente
                            </th>

                            <!--  <th class="cl_hidden">
                                  Activa
                              </th> -->
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Codigo_Factura
                                    </td>
                                    <td class="cl_hidden">
                                        @elemento.ID_Persona
                                    </td>
                                    
                                    <td>
                                        @elemento.Cliente
                                    </td>
                                    
                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.ID_Persona" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.ID_Persona" />
                                    </td>
                                </tr>
                              
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>