@page
@model asp_presentacion.Pages.Ventanas.Menu.MascotasModel
@{
    ViewData["Titulo"] = "Mascotas";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Mascotas</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Filtrar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>EDITAR MASCOTA</h3>
                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">ID_Mascota</label>
                            <div class="col-lg-6">
                                <input id="nmID_Mascota" class="cts_forms form-control" asp-for="@Model.Actual!.ID_Mascota" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Código Mascota</label>
                            <div class="col-lg-6">
                                <input id="nmCod_Mascota" class="cts_forms form-control" asp-for="@Model.Actual!.Cod_Mascota" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Nombre</label>
                            <div class="col-lg-6">
                                <input id="nmNombre" class="cts_forms form-control" asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Género</label>
                            <div class="col-lg-6">
                                <input id="nmGenero" class="cts_forms form-control" asp-for="@Model.Actual!.Genero" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Edad</label>
                            <div class="col-lg-6">
                                <input id="nmEdad" class="cts_forms form-control" asp-for="@Model.Actual!.Edad" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Dueño</label>
                            <div class="col-lg-6">
                                <input id="nmDueño" class="cts_forms form-control" asp-for="@Model.Actual!.Dueño" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Nuevo)
            {
                <div class="containers_vn panel panel-default">
                    <h3>INGRESA MASCOTA</h3>
                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Código Mascota</label>
                            <div class="col-lg-6">
                                <input id="nmCod_Mascota" class="cts_forms form-control" asp-for="@Model.Actual!.Cod_Mascota" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Nombre</label>
                            <div class="col-lg-6">
                                <input id="nmNombre" class="cts_forms form-control" asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Género</label>
                            <div class="col-lg-6">
                                <input id="nmGenero" class="cts_forms form-control" asp-for="@Model.Actual!.Genero" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Edad</label>
                            <div class="col-lg-6">
                                <input id="nmEdad" class="cts_forms form-control" asp-for="@Model.Actual!.Edad" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Dueño</label>
                            <div class="col-lg-6">
                                <input id="nmDueño" class="cts_forms form-control" asp-for="@Model.Actual!.Dueño" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">Mensaje</h2>
                            <h4 align="left">¿Desea borrar la entidad?</h4>
                            <h6 align="left">@Model.Actual!.Nombre</h6>
                            <br />
                            <br />
                            <input type="submit" value="Borrar" asp-page-handler="BtBorrar" class="btn btn-secondary" />
                            <input type="submit" value="Cerrar" asp-page-handler="BtCancelar" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_utilidades.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_utilidades.Enumerables.Ventanas.Borrar)
            {
                <input id="flNombre" class="cts_forms form-control" asp-for="@Model.Filtro!.Nombre" placeholder="Nombre" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>Código Mascota</th>
                            <th>Nombre</th>
                            <th class="cl_hidden">ID_Mascota</th>
                            <th>Género</th>
                            <th>Edad</th>
                            <th>Dueño</th>
                            <th class="cl_actions">Acción</th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento.Cod_Mascota</td>
                                    <td>@elemento.Nombre</td>
                                    <td class="cl_hidden">@elemento.ID_Mascota</td>
                                    <td>@elemento.Genero</td>
                                    <td>@elemento.Edad</td>
                                    <td>@elemento.Dueño</td>
                                    <td>
                                        <input type="submit" value="Modificar" asp-page-handler="BtModificar" class="btn btn-secondary" asp-route-data="@elemento.ID_Mascota" />
                                        <input type="submit" value="Borrar" asp-page-handler="BtBorrarVal" class="btn btn-secondary" asp-route-data="@elemento.ID_Mascota" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>
